{
  "name": "e-commerce-webapp",
  "version": "1.0.0",
  "type": "module",
  "main": "backend/server.js",
  "scripts": {
    "preinstall": "rimraf frontend/node_modules/@eslint/eslintrc",
    "frontend-install": "npm install --prefix frontend",
    "frontend-build": "npm run build --prefix frontend",
    "postinstall": "npm run frontend-install && npm run frontend-build",
    "dev": "npm install && npm run postinstall && nodemon backend/server.js",
    "build": "npm run postinstall",
    "start": "node backend/server.js"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.6.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.18.2",
    "ioredis": "^5.6.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.13.2",
    "openai": "^4.96.2",
    "stripe": "^18.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.9",
    "rimraf": "^6.0.1"
  }
}